<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.firebasechatdemo.activities.StatusActivity">

    <include
        android:id="@+id/status_toolbar"
        layout="@layout/app_bar_layout" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/status_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="82dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/status_input"
            android:layout_alignStart="@+id/status_input"
            android:layout_below="@+id/status_toolbar"
            android:layout_marginTop="36dp"
            android:elevation="1dp"
            android:hint="@string/your_status_hint" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/save_status_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/status_input"
        android:layout_alignRight="@+id/status_input"
        android:layout_below="@+id/status_input"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:text="@string/save_status"
        android:textColor="@android:color/white" />


</RelativeLayout>
